{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": ["ES2015"],
    "types": ["node", "jest"],
    "strict": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src", "src/**/*.json"],
  "exclude": ["**/*.test.ts"],
  "ts-node": {
    "compilerOptions": {
      "target": "ES2015",
      "module": "CommonJS"
    }
  }
}
